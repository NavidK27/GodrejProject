create table Product(pId number, name varchar(10), category varchar(10), price number, primary key(pId));
create table Login(emailId varchar(10) primary key, pass varchar(10));
CREATE TABLE Users(userId number primary key, email varchar(10), pass varchar(10), state varchar(10), city varchar(10), pin number, isAdmin number, pId number, FOREIGN KEY(pId) REFERENCES Product(pId));
